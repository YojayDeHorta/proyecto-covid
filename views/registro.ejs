<%- include("template/headerb", {title:'registro'}) %>
    <div class="limiter">
		<div class="container-login100">
			<div class="login100-more" style="background-image: url('images/bg-01.jpg');"></div>

			<div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
				<form class="login100-form validate-form" id="registro" >
					<span class="login100-form-title p-b-59">
						Registro
					</span>
					
					
					<div class="wrap-input100 validate-input" data-validate="el nombre es requerido">
						<span class="label-input100">Nombre completo</span>
						<input class="input100" type="text" title="el nombre solo puede contener letras" name="nombre" placeholder="nombre..." pattern="[a-zA-Z ]+" maxlength="50" required>
						<span class="focus-input100"></span>
					</div>

					<div class="wrap-input100 " data-validate = "email es requerido ej:juan@mail.com">
						<span class="label-input100">Email</span>
						<input class="input100" type="email" name="email" placeholder="ej:juan@mail.com" maxlength="50" required>
						<span class="focus-input100"></span>
					</div>

					<div class="wrap-input100 " data-validate="la cedula solo debe tener numeros max 10">
						<span class="label-input100">cedula de ciudadania o tarjeta de identidad</span>
						<input class="input100" title="la cedula solo puede contener numeros,minimo 4" type="text" name="identificador" placeholder="ej: 1xxxxxxxxx" minlength="4" maxlength="12" pattern="[0-9]+" required>
						<!-- <span class="focus-input100"></span> -->
					</div>

					<div class="wrap-input100" data-validate = "la contraseña es requerida minimo 7 caracteres">
						<span class="label-input100">contraseña</span>
						<input class="input100" title="la contraseña tiene que tener minimo 8 palabras" type="password" name="password" placeholder="*************"  minlength="8" required>
						<span class="focus-input100"></span>
					</div>
					<div class="wrap-input100" >
						
						<label for="departamento" class="control-label">departamento</label>
                    	<select class="form-control" id="departamento" name="departamento"  required></select>
					</div>
					<div class="wrap-input100" >
						<label for="ciudad" class="control-label">Ciudad</label>
                        <select class="form-control" id="ciudad" name="ciudad"  required></select>
					</div>
					<div class="wrap-input100" >
						<label for="fecha">Fecha de nacimiento:</label>
						<input type="date" id="fecha" name="nacimiento" value="1999-01-01" max="2020-12-31" min="1910-00-00" required>
					</div>

					<div class="wrap-input100 validate-input" data-validate="la profesion es requerida">
						<span class="label-input100">Profesion actual:</span>
						<input class="input100" type="text" title="la profesion solo puede contener letras" name="profesion" placeholder="profesion..." maxlength="50" pattern="[a-zA-Z]+" required>
						<span class="focus-input100"></span>
					</div>

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn">
								Registrarse
							</button>
						</div>

						<a href="/login" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
							Iniciar sesion
							<i class="fa fa-long-arrow-right m-l-5"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	<script src="js/colombia.js"></script>
	<script src="js/registro.js"></script>
	<%- include("template/footerb") %>